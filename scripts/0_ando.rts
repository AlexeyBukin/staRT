# example scene matching "_mtl_materials.c.demo"
# should give the same result

add material "mat_sp1" -a <0.73, 0.93, 0.0> -m 0 -r 0.7 -i 1.6
add material "mat_c1" -a <0.6, 0.6, 0.6> -m 0 -r 1 -i 1.6

add sphere "sp1" -p <5, -5, 20> -r 2 -m "mat_sp1"
add cone "c1" -p <0, 0, 15> -l 10 -r 3 -m "mat_c1" -a [<1, 0, 0>, <0, 0, -1>, <0, 1, 0>]

add light "l1" -p <0, 0, 30> -c <1, 1, 1> -i 500.0
